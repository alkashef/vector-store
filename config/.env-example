# App Folders
DATA_PATH=store
RAW_DATA=store/raw_data

# Logging
LOG_FILE_PATH=logs/app.log

# OpenAI (leave blank locally; set a real key in your environment for CI/production)
OPENAI_API_KEY=<your-key-here>
OPENAI_MODEL=gpt-4o
MAX_FILE_MB=10
REQUEST_TIMEOUT_SECONDS=60
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Weaviate 
WEAVIATE_USE_LOCAL=true
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
WEAVIATE_BATCH_SIZE=64
WEAVIATE_DATA_PATH=store/weaviate_data
WEAVIATE_GRPC_PORT=50051
WEAVIATE_SCHEMA_PATH=store/weaviate_schema.json

